<%= form_for @contact do |f| %>
	<div class="field">
		<%= f.label :name %>:<br/>
		<%= f.text_field :name %>
	</div>

	<div class="field">
		<%= f.label :email %>:<br/>
		<%= f.email_field :from_email %>
	</div>

	<div class="field">
		<%= f.label :body %>:<br/>
		<%= f.text_area :body %>
	</div>

	<div class="action">
		<%= f.submit "Email Me" %>
	</div>
<% end %>
