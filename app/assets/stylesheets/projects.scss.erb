

/** classes **/
.hr-top{
	background: url('/assets/images/hr-top.png');
	background-size: 100% 3px;
	width:100%;
	height:3px;
}

.hr-bottom{
	background: url('/assets/images/hr-bottom.png');
	background-size: 100% 3px;
	width:100%;
	height:3px;
}


#blurb{
	width:100%;
	margin:12px auto;
	text-align:center;
}

#hd-name{
	width:100%;
	display:block;
	margin-top:18px;
	margin-bottom:9px;
}

#hd-skill-set{
	font-size:1.1em;
	font-weight:bold;
	color: #8d9294;
	background: url('/assets/images/skill-bg.png') bottom center no-repeat;
	background-size:100% 100%;
}

nav#shuffle-board-nav{
	width:auto;
	max-width:750px;
	margin:5px auto;
	text-align:center;
}

nav#shuffle-board-nav div{
	color:white;
	padding:5px 10px;
	margin-bottom:10px;
	font-size:1.4em;
	background: url("<%= asset_path 'nav-bg.png' %>") left top repeat-x;
	background-size: auto 200%;
	transition: background-position .4s;
	-webkit-transition: background-position .4s; /* Safari */
	text-decoration:none;
	display:inline-block;
	cursor:pointer;
}

nav#shuffle-board-nav div:hover, nav#shuffle-board-nav div.active{
	background-position:0 100%;
	color: #9fe5ff;
}

#content{
	min-height:900px;
	height:100%;
}

#shuffle-board{
	position:relative;
	margin:.8em auto;
	width:100%;
}

.slider{display:none;}

.item{
	position:absolute;
	max-width:24%;
	max-height:75px;
	width:100%;
	height:75px;
	overflow:hidden;
}

#blurb{
	width:84%;
}

#shuffle-board{
	margin:20px auto;
}

#hd-skill-set{
	font-size:1.5em;
	font-weight:normal;
}

#content{
	min-height:900px;
	height:100%;
}
	
.item{
	position:absolute;
	overflow:hidden;
	-webkit-box-shadow: 3px 3px 4px rgba(150, 150, 150, 0.4);
	-moz-box-shadow:    3px 3px 4px rgba(150, 150, 150, 0.4);
	box-shadow:         3px 3px 4px rgba(150, 150, 150, 0.4);
	max-width:150px;
	max-height:300px;
	height:auto;
	width:auto;
}

.slider{
	position:absolute;
	top:100%;
	display:block;
	width: 100%;
	padding: 4% 4%;
	height: 100%;
	background: rgba(52, 125, 159, .65);
	transition: top 1s;
	color:white;
	font-weight:bold;
	font-family:Arial, Helvetica, sans-serif;
	font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
	text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);
}

.item:hover .slider{
	top:50%;
}




ul li, ul{
	list-style-type:none;
}



#main-nav > li{
	top:200px;
	position:relative;
	/*position:static;*/
	float:left;
	padding:7px 8px;
	border:solid 1px white;
	-webkit-border-radius: 8px;
	-moz-border-radius: 8px;
	border-radius: 8px;
	color:white;
	
	background: #0f5357;
	background: -moz-linear-gradient(top, #1274CE 0%, #0C5292 100%);
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#1274CE), color-stop(100%,#0C5292));
	background: -webkit-linear-gradient(top, #1274CE 0%,#0C5292 100%);
	background: -o-linear-gradient(top, #1274CE 0%,#0C5292 100%);
	background: -ms-linear-gradient(top, #1274CE 0%,#0C5292 100%);
	background: linear-gradient(to bottom, #1274CE 0%,#0C5292 100%);
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#1274CE', endColorstr='#0C5292',GradientType=0 );

}

#main-nav li ul { 
	display:none;
	position:absolute;
	top:20px;
	left:-20px;
}

#main-nav li:hover ul { 
	display:block;
}


#main-nav li:active, #main-nav li:hover { 
	color: white;
}
